    "express": "^4.18.2",
    "express-ws": "^2.0.0",
    "minimist": "^1.2.8"
  },
  "description": "MeshCommander web server",
  "files": [
    "*.js",
    "license.txt",
    "readme.txt",
    "public"
  ],
  "homepage": "http://meshcommander.com",
  "keywords": [
    "Intel Active Management Technology",
    "Remote Management",
    "Intel AMT",
    "Active Management",
    "Remote Desktop"
  ],
